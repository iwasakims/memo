<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration>

  <property>
    <name>ozone.metadata.dirs</name>
    <value>/home/iwasakims/ozone/meta</value>
  </property>
  <property>
    <name>hdds.metadata.dirs</name>
    <value>/home/iwasakims/ozone/hdds</value>
  </property>

  <property>
    <name>ozone.om.ratis.storage.dir</name>
    <value>/home/iwasakims/ozone/om/ratis</value>
  </property>
  <property>
    <name>ozone.scm.ha.ratis.storage.dir</name>
    <value>/home/iwasakims/ozone/scm/ratis</value>
  </property>
  <property>
    <name>hdds.container.ratis.datanode.storage.dir</name>
    <value>/home/iwasakims/ozone/datanode/ratis</value>
  </property>
  <property>
    <name>hdds.datanode.dir</name>
    <value>/home/iwasakims/ozone/datanode</value>
  </property>
  <property>
     <name>ozone.scm.datanode.id.dir</name>
     <value>/home/iwasakims/ozone/datanode/node</value>
  </property>

  <property>
    <name>ozone.scm.names</name>
    <value>localhost</value>
  </property>
  <property>
    <name>ozone.scm.client.address</name>
    <value>localhost</value>
  </property>

  <property>
    <name>ozone.scm.container.size</name>
    <value>128MB</value>
  </property>
  <property>
    <name>ozone.scm.block.size</name>
    <value>32MB</value>
  </property>
  <property>
    <name>ozone.scm.chunk.size</name>
    <value>4MB</value>
    <description>ozone.client.stream.buffer.flush.size % ozone.scm.chunk.size must be 0.</description>
  </property>

  <property>
    <name>hdds.datanode.storage.utilization.critical.threshold</name>
    <value>1.0</value>
  </property>

  <property>
    <name>ozone.client.stream.buffer.max.size</name>
    <value>16MB</value>
    <description>ozone.scm.block.size % ozone.client.stream.buffer.max.size must be 0.</description>
  </property>
  <property>
    <name>ozone.client.stream.buffer.flush.size</name>
    <value>8MB</value>
    <description>ozone.client.stream.buffer.max.size % ozone.client.stream.buffer.flush.size must be 0.</description>
  </property>

  <property>
    <name>ozone.replication.type</name>
    <value>RATIS</value>
  </property>
  <property>
    <name>ozone.replication</name>
    <value>1</value>
  </property>

</configuration>
